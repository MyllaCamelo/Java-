import java.util.Scanner;

public class SalarioFuncionario {
	public static void main(String[] args) {

		float porcentagem;
		
		Scanner leitor = new Scanner(System.in);
		
		System.out.println("Digite seu antigo sálario: ");
		int dinheiro = leitor.nextInt();
		System.out.println("Digite seu novo sálario: ");
		int dinheiroNovo = leitor.nextInt();
		double calculo = (dinheiroNovo - dinheiro);
		porcentagem = (float) ((calculo / dinheiro) * 100);

		
		System.out.println("O valor do seu atual salario é: " + dinheiroNovo + " A porcentagem de aumento foi de : " + porcentagem + "%");
		leitor.close();
	}
  
    
}
