import java.util.Scanner;

public class ValoresDeUmArray {

	public static void main(String[] args) {
		Scanner leitor = new Scanner(System.in);
		
		int VALOR_ESTATICO = 45;
		int valorDoLeitor = 0;
		Integer[] array = new Integer[300];
		
		System.out.println("Insira uma posição para o array: ");
		valorDoLeitor = leitor.nextInt();

		array[valorDoLeitor] = VALOR_ESTATICO;

		for (int i = 0; i < 300; i++){
		    System.out.println("Posição " + i + ": " + array[i]);
		}
		
		leitor.close();
	}

}
